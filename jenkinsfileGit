pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/loubnadevofs/LOUBNA_ELJADAOUI_SONARQUBE.git'  // 
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('Tp_Jen_Son') {  // 'SonarQube' est le nom de votre serveur configur√© dans Jenkins
                    sh 'npm run sonar'
                }
            }
        }
    }
}
